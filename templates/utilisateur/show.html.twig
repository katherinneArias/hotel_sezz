{% extends 'admin/admin.html.twig' %}

{% block title %}Détails de l'utilisateur{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Détails de l'utilisateur</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ utilisateur.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ utilisateur.email }}</td>
            </tr>
            <tr>
                <th>Rôles</th>
                <td>
                    {% for role in utilisateur.roles %}
                        <span class="badge bg-secondary">{{ role }}</span>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ utilisateur.nom }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ utilisateur.prenom }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ utilisateur.telephone ?? '-' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_utilisateur_index') }}" class="btn btn-warning">← Retour à la liste</a>
    <a href="{{ path('app_utilisateur_edit', {'id': utilisateur.id}) }}" class="btn btn-primary">Modifier</a>

    {{ include('utilisateur/_delete_form.html.twig') }}
</div>
{% endblock %}
