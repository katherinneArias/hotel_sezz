{% extends 'admin/admin.html.twig' %}

{% block title %}Commentaires - Administration{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Commentaires des clients</h1>

    <table class="table table-striped table-bordered align-middle text-center">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Contenu</th>
                <th>Note</th>
                <th>Date</th>
                <th>Utilisateur</th>
                <th>Chambre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaires %}
            <tr>
                <td>{{ commentaire.id }}</td>
                <td>{{ commentaire.contenu }}</td>
                <td>{{ commentaire.note ?? '-' }}</td>
                <td>{{ commentaire.dateCommentaire ? commentaire.dateCommentaire|date('d/m/Y H:i') : '' }}</td>
                <td>{{ commentaire.utilisateur.email }}</td>
                <td>Chambre n°{{ commentaire.chambre.numero }}</td>
                <td>
                    
                   
                    {{ include('commentaire/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7" class="text-muted">Aucun commentaire trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
